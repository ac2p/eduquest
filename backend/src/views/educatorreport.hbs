      customStart: document.getElementById('studentCustomStart')?.value || document.getElementById('customStart')?.value || undefined,
      customEnd: document.getElementById('studentCustomEnd')?.value || document.getElementById('customEnd')?.value || undefined
    };

    const res = await fetch("/educator/report/sendReport", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(payload)
    });

    const data = await res.json();

    if (res.ok) {
      showPopup(data.message || "Report sent successfully");
    } else {
      showPopup(data.message || "Failed to send report");
    }

  } catch (err) {
    console.error("SEND REPORT ERROR:", err);
    showPopup("Server error occurred");
  }
}
 // ------------------ LOAD INFO ------------------
  async function loadClasses() {
  const classSelect = document.getElementById('classId');
  const studentClassSelect = document.getElementById('studentClassId');

  const res = await fetch('/educator/report/classes');
  const classes = await res.json();

  classes.forEach(c => {
    const option1 = document.createElement('option');
    option1.value = c._id;
    option1.textContent = c.name;
    classSelect.appendChild(option1);

    const option2 = document.createElement('option');
    option2.value = c._id;
    option2.textContent = c.name;
    studentClassSelect.appendChild(option2);
  });
}
document.getElementById('studentClassId').addEventListener('change', async (e) => {
  const classId = e.target.value;
  const studentSelect = document.getElementById('studentID');

  studentSelect.innerHTML = "";

  try {
    const res = await fetch(`/educator/report/students/${classId}`);
    const students = await res.json(); // <-- this is already [{id, name}]

    if (!students || students.length === 0) {
      const option = document.createElement('option');
      option.textContent = "No students found";
      option.disabled = true;
      studentSelect.appendChild(option);
    } else {
      students.forEach(s => {
        const option = document.createElement('option');
        option.value = s.id;      // ✅ correct
        option.textContent = s.name; // ✅ correct
        studentSelect.appendChild(option);
      });
    }

    studentSelect.classList.remove("hidden");

  } catch (err) {
    console.error("Failed to load students:", err);
  }
});
