 async function SendReport() {
  try {
    const payload = {
      classId: document.getElementById('studentClassId')?.value || document.getElementById('classId')?.value,
      studentID: document.getElementById('studentID')?.value,
      reportType: document.getElementById('studentReportType')?.value || document.getElementById('reportType')?.value,
