      /* ANIMATED BACKGROUND */
      .cinematic-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -50;
        background:
          radial-gradient(
            circle at 15% 15%,
            rgba(224, 231, 255, 0.4) 0%,
            transparent 40%
          ),
          radial-gradient(
            circle at 85% 10%,
            rgba(255, 228, 230, 0.4) 0%,
            transparent 40%
          ),
          radial-gradient(
            circle at 50% 50%,
            rgba(240, 249, 255, 0.5) 0%,
            transparent 50%
          ),
          radial-gradient(
            circle at 80% 90%,
            rgba(220, 252, 231, 0.3) 0%,
            transparent 40%
          );
        background-size: 150% 150%;
        animation: breathe 15s ease-in-out infinite alternate;
      }
      .cinematic-grid {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -49;
        background-image: radial-gradient(#6366f1 0.7px, transparent 0.7px);
        background-size: 24px 24px;
        opacity: 0.08;
        mask-image: linear-gradient(to bottom, black 40%, transparent 100%);
      }
      /* GLASSMORPHISM UTILITIES */
      .glass-panel {
        background: rgba(255, 255, 255, 0.75);
        backdrop-filter: blur(16px);
        -webkit-backdrop-filter: blur(16px);
        border: 1px solid rgba(255, 255, 255, 0.9);
        box-shadow:
          0 4px 20px -2px rgba(99, 102, 241, 0.05),
          0 10px 40px -10px rgba(99, 102, 241, 0.05);
      }
      .glass-card-hover {
        transition: all 0.3s cubic-bezier(0.2, 0.8, 0.2, 1);
      }
      .glass-card-hover:hover {
        transform: translateY(-4px) scale(1.005);
        background: rgba(255, 255, 255, 0.95);
        box-shadow: 0 12px 30px -5px rgba(99, 102, 241, 0.1);
        border-color: rgba(255, 255, 255, 1);
      }
      /* KEYFRAMES */
      @keyframes breathe {
        0% {
          transform: scale(1);
        }
        100% {
          transform: scale(1.05);
        }
      }
      @keyframes float {
        0%,
        100% {
          transform: translateY(0px);
        }
        50% {
          transform: translateY(-10px);
        }
      }
      @keyframes pulse-glow {
        0%,
        100% {
          box-shadow: 0 0 0 0px rgba(99, 102, 241, 0.2);
        }
        50% {
          box-shadow: 0 0 0 8px rgba(99, 102, 241, 0);
        }
      }
      @keyframes slide-up-fade {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      @keyframes gradient-x {
        0%,
        100% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
      }
      /* UTILITY CLASSES */
      .animate-float {
        animation: float 6s ease-in-out infinite;
      }
      .animate-float-delayed {
        animation: float 8s ease-in-out 1s infinite;
      }
      .animate-enter {
        animation: slide-up-fade 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
        opacity: 0;
      }
      .animate-gradient {
        animation: gradient-x 3s ease infinite;
      }
      .delay-100 {
        animation-delay: 100ms;
      }
      .delay-200 {
        animation-delay: 200ms;
      }
      .delay-300 {
        animation-delay: 300ms;
      }
      .font-heading {
        font-family: var(--font-heading);
      }
      /* Toggle Switch */
      .toggle-checkbox:checked {
        right: 0;
        border-color: #6366f1;
      }
      .toggle-checkbox:checked + .toggle-label {
        background-color: #6366f1;
      }
      /* Report Specific */
      .select-chevron {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
        background-position: right 0.75rem center;
        background-repeat: no-repeat;
        background-size: 1.2em 1.2em;
      }
      /* Segmented Control Animation */
      .segment-indicator {
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      }
      /* Hide scrollbar for clean look in lists */
      .no-scrollbar::-webkit-scrollbar {
        display: none;
      }
      .no-scrollbar {
        -ms-overflow-style: none;
        scrollbar-width: none;
      }
