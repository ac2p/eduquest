  // === TAB SWITCHING ===
  function switchTab(id) {
    const activeClass =
      "w-full flex items-center gap-3 px-4 py-3 rounded-xl bg-indigo-50 text-indigo-600 font-bold text-sm shadow-sm transition-all text-left group";
    const inactiveClass =
      "w-full flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-slate-50 text-slate-500 hover:text-indigo-600 transition-all font-semibold text-sm text-left group";

    const navIds = ["details", "account", "security", "stats"];

    navIds.forEach((tab) => {
      const el = document.getElementById("nav-" + tab);
      if (el) {
        el.className = tab === id ? activeClass : inactiveClass;
        const icon = el.querySelector("svg");
        if (icon) {
          if (tab === id) {
            icon.classList.remove("text-slate-400");
          } else {
            icon.classList.add("text-slate-400");
          }
        }
      }
    });

    const current = document.querySelector(".tab-content:not(.hidden)");
    const next = document.getElementById(id);

    if (current && current !== next) {
      current.classList.replace("opacity-100", "opacity-0");
      setTimeout(() => {
        current.classList.add("hidden");
        if (next) {
          next.classList.remove("hidden");
          setTimeout(() => {
            next.classList.replace("opacity-0", "opacity-100");
          }, 50);
        }
      }, 300);
    } else if (!current && next) {
      next.classList.remove("hidden");
      setTimeout(() => {
        next.classList.replace("opacity-0", "opacity-100");
      }, 50);
    }
  }

  // === STAR RATING ===
  let selectedRating = 0;
  const starTexts = ["Poor", "Fair", "Good", "Very Good", "Excellent!"];
  const textEl = document.getElementById("rating-text");

  document.querySelectorAll(".star-btn").forEach(btn => {
    btn.addEventListener("click", () => {
      const n = parseInt(btn.dataset.star);
      selectedRating = n;
      document.getElementById("ratingInput").value = n;

      if (textEl) {
        textEl.innerText = starTexts[n - 1];
        textEl.style.opacity = "1";
      }

      // Update stars
      for (let i = 1; i <= 5; i++) {
        const star = document.getElementById("star-" + i);
        if (star) {
          if (i <= n) {
            star.classList.add("text-amber-400", "fill-amber-400");
            star.classList.remove("text-slate-200", "fill-transparent");
          } else {
            star.classList.remove("text-amber-400", "fill-amber-400");
            star.classList.add("text-slate-200", "fill-transparent");
          }
        }
      }
    });
  });

  // === TAG SELECTION ===
  let selectedTags = [];
  document.querySelectorAll(".tag-btn").forEach(btn => {
    btn.addEventListener("click", () => {
      const tag = btn.innerText;
      const input = document.getElementById("tagsInput");
      if (selectedTags.includes(tag)) {
        selectedTags = selectedTags.filter(t => t !== tag);
        btn.classList.remove("bg-indigo-100", "text-indigo-600");
      } else {
        selectedTags.push(tag);
        btn.classList.add("bg-indigo-100", "text-indigo-600");
      }
      if (input) input.value = JSON.stringify(selectedTags);
    });
  });

  // === CHARACTER COUNTER ===
  const textarea = document.querySelector("textarea[name='content']");
  const counter = document.getElementById("charCount");
  if (textarea && counter) {
    textarea.addEventListener("input", () => {
      counter.innerText = `${textarea.value.length}/200`;
    });
  }

